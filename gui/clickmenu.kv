#:kivy 1.9.0

<OptionMenu>:
	rows: 1
	canvas.before:
		Color:
			rgba: self.space_color
		Rectangle:
			pos: self.pos
			size: self.size
		Color:
			rgba: self.frame_color
		Line:
			rectangle: self.x + 2, self.y + 2, self.width - 4, self.height - 4

<ClickMenu>:
	cols: 1
	size_hint: None, None
	size: 150, len(self.children) * 30
	canvas:
		Color:
			rgba: 0, 0, 0, .3
		Rectangle:
			pos: self.x + 2, self.y - 1
			size: self.size
		Color:
			rgba: 1, 1, 1, .85
		Rectangle:
			pos: self.pos
			size: self.size
		Color:
			rgba: .3, .3 , .3, .6
		Line:
			rectangle: self.x, self.y, self.width, self.height
