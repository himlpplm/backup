#:kivy 1.9.0
#:import ttf gui.font.ttf

<ScrollView>:
	scroll_type: ['bars']
	do_scroll: True, True
	bar_width: 5
	canvas.before:
		Color:
			rgba: .5, .5, .5, .5
		Line:
			rectangle: self.x, self.y, self.width, self.height

<FileManager>:
	cols: 1
	size_hint: .9, .9
	pos_hint: {'x': .05, 'top': .95}
	canvas:
		Color:
			rgba: 1, 1, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size
