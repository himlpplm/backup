#:kivy 1.9.0
#:import ttf gui.font.ttf

<ScrollView>:
	scroll_type: ['bars']
	do_scroll: True, True
	bar_width: 5
	canvas.before:
		Color:
			rgba: .5, .5, .5, .5
		Line:
			rectangle: self.x, self.y, self.width, self.height

<FileManager@GridLayout>:
	cols: 1
	canvas:
		Color:
			rgba: .5, .5, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size
	filelist: self.ids['d_filelist']
	titlelabel: self.ids['d_titlelabel']
	TitleLabel:
		id: d_titlelabel
		filelist: root.ids['d_filelist']
	ScrollView:
		FileList:
			id: d_filelist
