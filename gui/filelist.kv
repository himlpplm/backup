#:kivy 1.9.0
#:import ttf gui.font.ttf

<AttributeFileLabel>:
	color: 0, 0, 0, 1
	font_name: ttf
	font_size: 16
	text_size: self.size
	shorten: True
	shorten_from: 'right'

	size_hint: None, None
	size: 100, 20
	canvas.before:
		Color:
			rgba: .2, .2, .2, .2
		Line:
			rectangle: self.x, self.y, self.width, self.height

<FileLabel>:
	rows: 1
	size_hint: 1, None
	height: 20
	canvas.before:
		Color:
			rgba: self.space_color
		Rectangle:
			pos: self.pos
			size: self.size
		Color:
			rgba: self.frame_color
		Line:
			rectangle: self.x, self.y, self.width, self.height

<FileList>:
	cols: 1
	size_hint: 1, None
	height: len(self.children) * 20