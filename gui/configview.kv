#:kivy 1.9.0
#:import ttf gui.font.ttf

<ConfigView>:
	size_hint: .8, .8
	disabled: False
	auto_dismiss: False
	GridLayout:
		cols: 1
		size_hint: 1, 1
		GridLayout:
			rows: 1
			size_hint: 1, .1
			Label:
				text: '配置'
				font_name: ttf
		GridLayout:
			rows: 1
			size_hint: 1, .8
			GridLayout:
				cols: 1
				Button:
					text: 'base'
				Button:
					text: 'disk'
				Button:
					text: 'baidu'
			GridLayout:
				cols: 1
				Button:
					text: 'ignore'
					size_hint: 1, .9
				GridLayout:
					rows: 1
					size_hint: 1, .1
					Button:
						text: 'add'
					Button:
						text: 'mod'
					Button:
						text: 'del'
		GridLayout:
			rows: 1
			size_hint: 1, .1
			Label:
				size_hint: .8, 1
			Button:
				text: '确认'
				font_name: ttf
				size_hint: .1, 1
			Button:
				text: '取消'
				font_name: ttf
				size_hint: .1, 1
				on_release: root.dismiss()
		